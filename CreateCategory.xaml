<Window x:Class="warehouse.CreateCategory"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:warehouse"
        mc:Ignorable="d"
        Title="Создание/изменение раздела" Height="210" Width="320" WindowStartupLocation="CenterScreen">
    <Grid>
        <Label Content="Введите название раздела:" HorizontalAlignment="Left" Height="50" Margin="10,10,0,0" VerticalAlignment="Top" Width="264" FontSize="14" FontWeight="Bold"/>
        <Button Content="ОК" HorizontalAlignment="Left" Height="35" Margin="129,125,0,0" VerticalAlignment="Top" Width="160" Click="Button_Click" FontSize="14" FontWeight="Bold"/>
        <TextBox x:Name="NameOfCategoryTextBox" HorizontalAlignment="Left" Height="30" Margin="55,60,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="234" FontSize="14"/>
    </Grid>
</Window>
