<Window x:Class="warehouse.SetMinAmountOfItems"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:warehouse"
        mc:Ignorable="d"
        Title="SetMinAmountOfItems" Height="250" Width="400">
    <Grid>
        <Label Content="Введите минимальное количество товаров:" HorizontalAlignment="Center" Height="35" Margin="0,50,0,0" VerticalAlignment="Top" Width="340" FontSize="15" FontWeight="Bold"/>
        <TextBox x:Name="MinAmountTextBox" HorizontalAlignment="Left" Height="30" Margin="100,90,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="270" FontSize="14"/>
        <Button x:Name="OKButton" Content="OK" HorizontalAlignment="Left" Height="35" Margin="245,155,0,0" VerticalAlignment="Top" Width="129" FontSize="16" FontWeight="Bold" Click="OKButton_Click"/>

    </Grid>
</Window>
