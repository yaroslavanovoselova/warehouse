<Window x:Class="warehouse.GetDateForGenerator"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:warehouse"
        mc:Ignorable="d"
        Title="Сгенерировать классификатор" Height="280" Width="460" WindowStartupLocation="CenterScreen">
    <Grid>
        <Label Content="Количество разделов:" HorizontalAlignment="Left" Height="30" Margin="35,30,0,0" VerticalAlignment="Top" Width="170" FontSize="14" FontWeight="Bold"/>
        <Label Content="Количество товаров:" HorizontalAlignment="Left" Height="30" Margin="35,90,0,0" VerticalAlignment="Top" Width="170" FontSize="14" FontWeight="Bold"/>
        <TextBox x:Name="AmountOfCategoriesTextBox" HorizontalAlignment="Left" Height="30" Margin="300,45,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="135" FontSize="14"/>
        <TextBox x:Name="AmountOfItemsTextBox" HorizontalAlignment="Left" Height="30" Margin="300,105,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="135" FontSize="14"/>
        <Button x:Name="GenerateButton" Content="Сгенерировать" HorizontalAlignment="Left" Height="40" Margin="225,177,0,0" VerticalAlignment="Top" Width="210" FontSize="16" FontWeight="Bold" Click="GenerateButton_Click"/>
    </Grid>
</Window>
